{
  "compilerOptions": {
    "strictNullChecks": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist/",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "preserveConstEnums": true,
    "strict": true,
    "target": "es5",
    "lib": ["dom", "es5"],
    "alwaysStrict": true,
    "allowJs": false,
    "declaration": true,
    "pretty": true,
    "version": true,
    "plugins": [],
    "noImplicitOverride": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "example/declare.d.ts"],
  "files": ["src/index.ts"]
}
